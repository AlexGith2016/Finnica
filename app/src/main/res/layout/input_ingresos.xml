<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="Actualizar Gastos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_weight="8.29"
        android:textSize="24sp"
        android:textAlignment="center"
        android:fontFamily="monospace"
        android:textColor="@color/common_signin_btn_default_background"
        android:textStyle="normal|bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="359dp"
        android:layout_weight="1050.39">

        <TextView
            android:text="Descripcion:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView32"
            android:textSize="19sp"
            android:textAlignment="center"
            android:layout_alignBottom="@+id/txtActDescIngresos"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtActDescIngresos"
            android:layout_marginTop="120dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView32" />

        <TextView
            android:text="Monto:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView31"
            android:textSize="19sp"
            android:textAlignment="viewStart"
            android:layout_alignBottom="@+id/txtActMontoIngresos"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/txtActMontoIngresos"
            android:layout_below="@+id/textView32"
            android:layout_toEndOf="@+id/textView32" />

        <TextView
            android:text="Fecha:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView33"
            android:textSize="19sp"
            android:textAlignment="viewStart"
            android:layout_alignBottom="@+id/txtActFechaIngresos"
            android:layout_alignEnd="@+id/textView31" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/txtActFechaIngresos"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/btnActIngresos"
            android:layout_alignStart="@+id/txtActMontoIngresos" />

        <Button
            android:text="actualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnActIngresos"
            android:layout_marginTop="52dp"
            android:layout_below="@+id/textView33"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Categoria:"
            android:id="@+id/textView11"
            android:layout_above="@+id/spinnerCategoria"
            android:layout_alignStart="@+id/textView33" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerCategoria"
            android:layout_above="@+id/textView32"
            android:layout_alignEnd="@+id/btnActIngresos"
            android:layout_marginBottom="27dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/txtCategoria"
            android:layout_marginStart="26dp"
            android:layout_above="@+id/spinnerCategoria"
            android:layout_alignStart="@+id/btnActIngresos" />

    </RelativeLayout>

</LinearLayout>
