<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="359dp"
        android:layout_weight="1050.39">

        <TextView
            android:text="Monto:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView31"
            android:textSize="18sp"
            android:textAlignment="viewStart"
            android:layout_alignBottom="@+id/txtActMontoIngresos"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtActDescIngresos"
            android:layout_toStartOf="@+id/txtActDescIngresos" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/txtActFechaIngresos"
            android:layout_below="@+id/textView31"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView31" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Categoria:"
            android:id="@+id/textView11"
            android:layout_alignStart="@+id/textView33"
            android:layout_below="@+id/textView10"
            android:layout_toStartOf="@+id/txtActDescIngresos" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerCategoria"
            android:layout_below="@+id/textView11"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView11" />

        <TextView
            android:text="Actualizar Ingreso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:layout_weight="8.29"
            android:textSize="24sp"
            android:textAlignment="center"
            android:fontFamily="monospace"
            android:textColor="@color/common_signin_btn_default_background"
            android:textStyle="normal|bold"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView11"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoria texto"
            android:id="@+id/txtCategoria"
            android:layout_below="@+id/textView10"
            android:layout_alignStart="@+id/btnActIngresos"
            android:layout_marginStart="37dp"
            android:textSize="16sp"
            android:layout_above="@+id/spinnerCategoria" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtActDescIngresos"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView32"
            android:layout_below="@+id/spinnerCategoria" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/txtActMontoIngresos"
            android:layout_below="@+id/txtActDescIngresos"
            android:layout_alignStart="@+id/txtActDescIngresos"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="actualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnActIngresos"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/txtActFechaIngresos"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Descripcion:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView32"
            android:textSize="18sp"
            android:layout_below="@+id/spinnerCategoria"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/textView31" />

        <TextView
            android:text="Fecha:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView33"
            android:textSize="18sp"
            android:textAlignment="viewStart"
            android:layout_below="@+id/textView31"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/txtActMontoIngresos"
            android:layout_above="@+id/btnActIngresos" />

    </RelativeLayout>

</LinearLayout>
