<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_configuracion"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.jaime.finnica.ConfiguracionActivity">

<TextView
    android:text="Configuracion"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textView11"
    android:textSize="30sp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true" />

<TextView
    android:text="Contrase単a: "
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView11"
    android:layout_alignParentStart="true"
    android:layout_marginTop="38dp"
    android:id="@+id/textView15" />

<TextView
    android:text="Contrase単a nueva: "
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textView29"
    android:layout_alignTop="@+id/contranueva1"
    android:layout_alignParentStart="true" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPassword"
    android:ems="10"
    android:layout_marginTop="84dp"
    android:id="@+id/contranueva1"
    android:layout_below="@+id/contraantigua"
    android:layout_toEndOf="@+id/textView29" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPassword"
    android:ems="10"
    android:id="@+id/contraantigua"
    android:layout_alignTop="@+id/textView15"
    android:layout_toEndOf="@+id/textView29" />

<TextView
    android:text="Vuelva a introducir la Contrase単a nueva: "
    android:layout_height="wrap_content"
    android:id="@+id/textView30"
    android:layout_width="120dp"
    android:layout_below="@+id/contranueva1"
    android:layout_toStartOf="@+id/contranueva1"
    android:layout_marginTop="82dp" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPassword"
    android:ems="10"
    android:layout_alignBottom="@+id/textView30"
    android:layout_toEndOf="@+id/textView30"
    android:id="@+id/contranueva2" />

<Button
    android:text="Establecer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/btnEstablecer"
    android:layout_alignParentBottom="true"
    android:layout_alignStart="@+id/contranueva1" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="* Si aun no tiene contrase単a no digite nada."
    android:id="@+id/textView31"
    android:layout_below="@+id/textView11"
    android:layout_alignParentStart="true"
    android:textColor="#f80a0a" />
</RelativeLayout>
