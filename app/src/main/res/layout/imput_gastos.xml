<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="Actualizar Gastos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_weight="8.29"
        android:textSize="24sp"
        android:textAlignment="center"
        android:fontFamily="monospace"
        android:textColor="@color/common_signin_btn_default_background"
        android:textStyle="normal|bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="359dp"
        android:layout_weight="1050.39">

        <TextView
            android:text="Descripcion:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:id="@+id/textView32"
            android:textSize="19sp"
            android:layout_alignBottom="@+id/txtActDescGasto"
            android:layout_alignParentTop="true"
            android:textAlignment="center" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:id="@+id/txtActDescGasto"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView32" />

        <TextView
            android:text="Monto:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView31"
            android:textSize="19sp"
            android:textAlignment="viewStart"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView32"
            android:layout_toStartOf="@+id/txtActMontoGasto"
            android:layout_alignBottom="@+id/txtActMontoGasto" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:layout_below="@+id/txtActDescGasto"
            android:id="@+id/txtActMontoGasto"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView32" />

        <TextView
            android:text="Fecha:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView33"
            android:textSize="19sp"
            android:textAlignment="viewStart"
            android:layout_below="@+id/textView31"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/txtActMontoGasto"
            android:layout_alignBottom="@+id/txtActFechaGasto" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/txtActFechaGasto"
            android:layout_below="@+id/txtActMontoGasto"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView31" />

        <Button
            android:text="actualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView33"
            android:layout_alignParentStart="true"
            android:id="@+id/btnActGasto"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>
