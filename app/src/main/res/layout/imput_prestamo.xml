<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Actualizar Prestamo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_weight="8.29"
        android:textSize="24sp"
        android:textAlignment="center"
        android:fontFamily="monospace"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="normal|bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="359dp"
        android:layout_weight="1050.39">

        <TextView
            android:text="Descripcion:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:id="@+id/textView32"
            android:textSize="19sp"
            android:layout_alignBottom="@+id/txtActDescPrestamo"
            android:layout_alignParentTop="true"
            android:textAlignment="center" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:id="@+id/txtActDescPrestamo"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView32" />

        <TextView
            android:text="Monto:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView31"
            android:textSize="19sp"
            android:textAlignment="viewStart"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView32"
            android:layout_toStartOf="@+id/txtActMontoPrestamo"
            android:layout_alignBottom="@+id/txtActMontoPrestamo" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/txtActFechaPrestamo"
            android:layout_below="@+id/txtActMontoPrestamo"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView31" />

        <TextView
            android:text="Fecha:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView33"
            android:textSize="19sp"
            android:textAlignment="viewStart"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView31"
            android:layout_toStartOf="@+id/txtActMontoPrestamo"
            android:layout_alignBottom="@+id/txtActFechaPrestamo" />

        <TextView
            android:text="Agente financiero:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:textSize="19sp"
            android:textAlignment="viewStart"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView33"
            android:layout_alignBottom="@+id/txtActAgentePrestamo" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/txtActAgentePrestamo"
            android:layout_below="@+id/txtActFechaPrestamo"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView15" />

        <TextView
            android:text="Cuotas:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:textSize="19sp"
            android:textAlignment="viewStart"
            android:layout_below="@+id/textView15"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/txtActCuotaPrestamo" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/txtActMontoPrestamo"
            android:layout_below="@+id/textView32"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/txtActCuotaPrestamo"
            android:layout_below="@+id/textView15"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="actualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnActPrestamo"
            android:layout_below="@+id/textView11"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>