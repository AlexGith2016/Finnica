<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/txtAgentePrestamoItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:text="Agente"
        android:textAppearance="?attr/textAppearanceListItem"
        android:background="#f1baba" />

    <TextView
        android:id="@+id/txtFechaPrestamoItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fecha de Prestamo"
        android:layout_below="@+id/txtDescPrestamoItem"
        android:layout_alignStart="@+id/txtAgentePrestamoItem"
        android:background="#b1f6d1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="descripcion"
        android:id="@+id/txtDescPrestamoItem"
        android:layout_alignStart="@+id/txtCuotaPrestamoItem"
        android:layout_below="@+id/txtAgentePrestamoItem"
        android:layout_alignParentEnd="true"
        android:background="#e8ee91" />

    <TextView
        android:id="@+id/txtMontoPrestamoItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monto prestamo"
        android:background="@android:color/holo_green_light"
        android:layout_below="@+id/txtFechaPrestamoItem"
        android:layout_alignStart="@+id/txtFechaPrestamoItem" />

    <TextView
        android:id="@+id/txtCuotaPrestamoItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cuota"
        android:background="@android:color/holo_purple"
        android:layout_below="@+id/txtMontoPrestamoItem"
        android:layout_alignStart="@+id/txtMontoPrestamoItem" />


</RelativeLayout>